{
  "manifest_version": 3,
  "name": "ChangeKeyboardText",
  "version": "1.3.2",
  "description": "Convert text between English and Hebrew keyboard layouts automatically.",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "32": "icon32.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+Q"
      },
      "description": "Open ChangeKeyboardText extension"
    }
  },
  "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "permissions": []
} 